version: '3.8'
services:
        nginx:
                container_name: web
                image: nginx:1.17.8
                volumes:
                    - ${PWD}/nginx:/etc/nginx
                restart: on-failure
                ports:
                    - "80:80"
                stop_grace_period: 30s
                networks:
                    net:
                        ipv4_address: 10.254.1.2
        backend:
                image: registry.gitlab.com/nolim1t/airdeveloppa-backend:v0.0.1-54385861
                user: 1000:1000
                environment:
                        HOME: /data
                container_name: backend
                volumes:
                        - ${PWD}/backend:/data/
                restart: on-failure
                stop_grace_period: 5m30s
                networks:
                    net:
                        ipv4_address: 10.254.1.4
        db:
                image: postgres:14.1
                user: 1000:1000
                restart: on-failure
                environment:
                        HOME: /data
                        POSTGRES_USER: pgadmin
                        POSTGRES_PASSWORD: secretaccess
                        POSTGRES_DB: airdeveloppa
                networks:
                    net:
                        ipv4_address: 10.254.1.6

networks:
    net:
        ipam:
            driver: default
            config:
                - subnet: 10.254.1.0/24
